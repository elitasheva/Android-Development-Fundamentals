<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_page_background">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_paris"
            android:id="@+id/button_paris"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_rome"
            android:id="@+id/button_rome"
            android:layout_below="@+id/button_paris"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_madrid"
            android:id="@+id/button_madrid"
            android:layout_below="@+id/button_rome"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/home_page_info"
            android:id="@+id/text_info_home_page"
            android:layout_above="@+id/button_paris"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/text_home_page_marginBottom"
            android:layout_marginStart="@dimen/text_home_page_marginSide"
            android:layout_marginEnd="@dimen/text_home_page_marginSide"/>
    </RelativeLayout>

</FrameLayout>
