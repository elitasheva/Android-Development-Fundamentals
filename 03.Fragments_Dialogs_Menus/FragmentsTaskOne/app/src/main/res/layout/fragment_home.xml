<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_page_layout_height"
    tools:context="com.example.etasheva.fragmentsapp.fragments.HomeFragment"
    android:background="@color/colorBackgroundNews">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/home_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_page"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/home_page_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/home_page_text_margin"/>

    <ImageView
        android:layout_width="@dimen/news_layout_width"
        android:layout_height="wrap_content"
        android:src="@drawable/news_home"
        android:adjustViewBounds="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/home_page_image_margin"/>


</FrameLayout>
